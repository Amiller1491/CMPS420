@model IEnumerable<Final.Models.TeacherModel>

@{
    ViewBag.Title = "Index";
}

<h2>Teachers</h2>
@*<button id="addButton" class="btn btn-primary"><i class="icon-plus"> </i> </button>*@

@if(User.IsInRole("Head")){
<p>
   @* @Html.ActionLink("Add User", "Create",null, new { @class="btn-primary"})*@
    <a class="btn btn-primary" href="~/Teacher/Create" ><i class="icon-plus"></i> Add Teacher</a>
</p>
