<table class="table tbody table-striped tbody table-hover tbody tr:hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.T_FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.T_LName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.T_FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.T_LName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.T_ID }, new { @class="btn btn-mini"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.T_ID }, new { @class="btn btn-mini btn-danger"})
        </td>
    </tr>
}

</table>
