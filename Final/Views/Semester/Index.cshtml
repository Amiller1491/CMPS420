@model IEnumerable<Final.Models.SemesterModel>

<h2>Semesters</h2>
@*<button id="addButton" class="btn btn-primary"><i class="icon-plus"> </i> </button>*@


@if(User.IsInRole("Head")){
<p>
   @* @Html.ActionLink("Add User", "Create",null, new { @class="btn-primary"})*@
    <a class="btn btn-primary" href="~/Semester/Create" ><i class="icon-plus"></i> Add Semester</a>
</p>
}

<table class="table tbody table-striped tbody table-hover tbody tr:hover table-bordered" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Term_ID }, new { @class="btn btn-mini"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Term_ID }, new { @class="btn btn-mini"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Term_ID }, new { @class="btn btn-mini btn-danger"})
        </td>
    </tr>
}

</table>
