@model IEnumerable<Final.Models.RoomModel>

<h2>Rooms</h2>
@*<button id="addButton" class="btn btn-primary"><i class="icon-plus"> </i> </button>*@


@if(User.IsInRole("Head")){
<p>
   @* @Html.ActionLink("Add User", "Create",null, new { @class="btn-primary"})*@
    <a class="btn btn-primary" href="~/Room/Create" ><i class="icon-plus"></i> Add Room</a>
</p>
}

<table class="table tbody table-striped tbody table-hover tbody tr:hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Facility_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomCap)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Facility_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomCap)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Room_ID }, new { @class="btn btn-mini"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Room_ID }, new { @class="btn btn-mini btn-danger"})
        </td>
    </tr>
}

</table>
